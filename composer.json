{
  "name": "alleyinteractive/wp-alleyvate",
  "description": "Defaults for WordPress sites by Alley.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Alley",
      "email": "info@alley.com"
    }
  ],
  "config": {
    "allow-plugins": {
      "alleyinteractive/composer-wordpress-autoloader": true,
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "lock": false,
    "sort-packages": true
  },
  "require": {
    "php": "^8.1",
    "alleyinteractive/composer-wordpress-autoloader": "^1.0",
    "alleyinteractive/wp-type-extensions": "^2.0",
    "composer/installers": "^1.0"
  },
  "require-dev": {
    "alleyinteractive/alley-coding-standards": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.8",
    "mantle-framework/testkit": "^0.12",
    "szepeviktor/phpstan-wordpress": "^1.3"
  },
  "scripts": {
    "fixer": "php-cs-fixer -v fix --allow-risky=yes",
    "lint": [
      "@phpcs",
      "@phpstan"
    ],
    "phpcbf": "phpcbf",
    "phpcs": "phpcs",
    "phpstan": "phpstan --memory-limit=512M",
    "phpunit": "phpunit",
    "test": [
      "@lint",
      "@phpunit"
    ]
  },
  "extra": {
    "wordpress-autoloader": {
      "autoload": {
        "Alley\\": "src/alley/"
      },
      "autoload-dev": {
        "Alley\\": "tests/alley/"
      }
    }
  }
}
